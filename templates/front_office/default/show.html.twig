{% extends 'front_office/layout.html.twig' %}

{% block title %}{{ post.title }}{% endblock %}

{% block content %}
<article class="post">
    <h1>{{ post.title }}</h1>
    <p>Publié le: {{ post.createdAt | date('d/m/Y') }}, par {{ post.writtenBy.name }}</p>
        <img src="{{ vich_uploader_asset(post) }}" alt="{{ post.title }}">
    <div class="post-body">
        {{ post.body | nl2br }}
    </div>
    <p>
        <a href="{{ path('app_frontoffice_default_homepage') }}">Retour à l'accueil</a>
    </p>
</article>
{% endblock %}
