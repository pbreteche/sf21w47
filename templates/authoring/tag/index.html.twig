{% extends 'authoring/layout.html.twig' %}

{% block title %}Mon blog{% endblock %}

{% block content %}
    <h1>Gestion des tags</h1>
    <p>Il y a {{ tags | length }} tag(s) :</p>
    <p><a href="{{ path('app_authoring_tag_create') }}">Nouveau</a></p>

    <table>
        <thead>
            <tr><th>id</th><th>Libellé</th><th>Couleur</th><th>Actions</th></tr>
        </thead>
        <tbody>
        {% for tag in tags %}
            <tr>
                <td>{{ tag.id }}</td>
                <td>{{ tag.label }}</td>
                <td style="background: {{ tag.color }}; color: #eee">{{ tag.color }}</td>
                <td><a href="{{ path('app_authoring_tag_edit', {id: tag.id}) }}">Éditer</a> -</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
